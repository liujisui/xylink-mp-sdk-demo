.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;

  height: 100vh;
  width: 100vw;
  overflow: auto;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30px;
}

.title {
  font-size: 18px;
  margin-bottom: 20px;
}

.version {
  font-size: 12px;
  margin-bottom: 20px;
}

.form {
  width: 80vw;
}

.form-group {
  margin: 15px auto;
  width: 80vw;
}

.form-input {
  border: 1px solid #ddd;
  font-size: 14px;
  padding: 0 10px;
  height: 36px;
}

.setting {
  color: #3846ff;
}
