.xylink-container {
  background-color: #1f1f25;
  height: 100vh;
  width: 100vw;
  color: #fff;
}

.xylink-loading {
  position: fixed;
  width: 100vw;
  height: 100vh;

  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.xylink-operate-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 40px;
  background-color: rgba(0, 0, 0, 0.8);

  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 14px;
  z-index: 100;
}

.xy-translate {
  display: block;
}

.xy__call {
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}

.xy__call-box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
}

.xy__call-person-name {
  font-size: 16px;
}

.xy__call-person-status {
  margin-top: 20px;
  font-size: 14px;
}
